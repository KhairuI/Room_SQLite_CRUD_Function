<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/mainActivityToolbarId">

    </include>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/nameId"
                        android:hint="Enter your name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/markId"
                        android:inputType="number"
                        android:hint="Enter your mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/genderId"
                        android:hint="Enter your gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            android:layout_marginTop="7dp"
                            android:text="Add Data"
                            android:layout_weight="1"
                            android:id="@+id/addButtonId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                        </com.google.android.material.button.MaterialButton>

                        <com.google.android.material.button.MaterialButton
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="Display Data Dialogue"
                            android:backgroundTint="#03A9F4"
                            android:id="@+id/displayButtonId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                        </com.google.android.material.button.MaterialButton>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:text="Display Data ListView"
                            android:backgroundTint="#2196F3"
                            android:id="@+id/displayListViewButtonId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.google.android.material.button.MaterialButton>
                        <com.google.android.material.button.MaterialButton
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="Display Data RecycleView"
                            android:backgroundTint="#2196F3"
                            android:id="@+id/displayRecycleViewButtonId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.google.android.material.button.MaterialButton>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            android:layout_marginTop="7dp"
                            android:text="Update Data"
                            android:layout_weight="1"
                            android:backgroundTint="#4CAF50"
                            android:id="@+id/updateButtonId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.google.android.material.button.MaterialButton>

                        <com.google.android.material.button.MaterialButton
                            android:layout_marginTop="7dp"
                            android:text="Delete Data"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:backgroundTint="#F63628"
                            android:id="@+id/deleteButtonId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.google.android.material.button.MaterialButton>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>